<?xml version="1.0" encoding="UTF-8" ?>
<project name="axis2-jibx-skeleton" basedir="." default="generate.service">
    <property environment="env"/>
    <property name="AXIS2_HOME" value="${env.AXIS2_HOME}"/>
    <property name="JIBX_HOME" value="${env.JIBX_HOME}"/>
    <property name="wsdl.uri" value="UserService.wsdl"/>
    <property name="src.dir" value="../java"/>
    <property name="build.dir" value="${basedir}/build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="service.name" value="UserService.aar"/>
    <property name="xsd.name" value="user.xsd"/>
    <property name="binding.name" value="../resources/user-binding.xml"/>

    <path id="jibx.classpath">
        <fileset dir="${JIBX_HOME}/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="generate.code">
        <java classname="org.jibx.schema.codegen.CodeGen" fork="yes" classpathref="jibx.classpath" failonerror="true">
            <arg line="-t ${src.dir}"/>
            <arg line="-b ${binding.name}"/>
            <arg line="-p com.xumiao.ws.vo"/>
            <arg line="user.xsd"/>
        </java>
    </target>

    <path id="axis2.classpath">
        <fileset dir="${AXIS2_HOME}/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="generate.skeleton">
        <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true" classpathref="axis2.classpath">
            <arg line="-uri ${wsdl.uri}"/>
            <arg line="-s"/>
            <arg line="-ss"/>
            <arg line="-sd"/>
            <arg line="-ssi"/>
            <arg line="-uw"/>
            <arg line="-ns2p http://localhost:8080/ws/vo=com.xumiao.ws.vo"/>
            <arg line="-l java"/>
            <arg line="-p com.xumiao.ws.service"/>
            <arg line="-d jibx"/>
            <arg line="-Ebindingfile ${binding.name}"/>
            <arg line="-o ${src.dir}"/>
        </java>
    </target>

    <target name="clean" >
        <delete dir="${build.dir}"/>
        <delete file="${service.name}"/>
    </target>

    <target name="init" depends="clean">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${classes.dir}"/>
    </target>

    <target name="compiler" depends="init">
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="axis2.classpath" includeantruntime="on"/>
        <taskdef name="bind" classname="org.jibx.binding.ant.CompileTask">
            <classpath>
                <fileset dir="${JIBX_HOME}/lib" includes="*.jar"/>
            </classpath>
        </taskdef>
        <bind verbose="true" load="true" binding="${binding.name}">
            <classpathset dir="${classes.dir}"/>
        </bind>
    </target>

    <!--<target name="generate.service" depends="compiler">-->
    <target name="generate.service">
        <copy file="services.xml" todir="${classes.dir}/META-INF"/>
        <copy file="UserService.wsdl" todir="${classes.dir}/META-INF"/>
        <jar destfile="${service.name}" basedir="${classes.dir}"/>
    </target>
</project>